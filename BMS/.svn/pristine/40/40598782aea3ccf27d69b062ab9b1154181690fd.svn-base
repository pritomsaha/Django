{% extends "layouts/base.html" %}
{% load static %}
{% block head_title %}
| {{ title }} List
{% endblock %}

{% block additional_style %}
  
{% endblock additional_style %}

{% block breadcrumb %}
    <li>
        <i class="fa fa-lg fa-angle-right"></i>
    </li>
    <li>
        <a href="{% url "Employees:list_designation" %}">{{ title }} List</a>
    </li>
{% endblock %}

{% block title %}
{{ title }} List
{% endblock %}

{% block button_container %}
    <a href="" class="btn btn-primary pull-right" onclick="create(); return false;">Add {{ title }}</a>
{% endblock button_container %}

{% block content %}
  <table class="table table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Designation Name</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      {% for designation in designations %}
        <tr>
          <td>{{ designation.designation_title }}</td>
          <td>{% if designation.status %}
                          <span class="label label-success" title="Active">Active</span>
                    {% else %}
                        <span class="label label-default" title="Disable">Disable</span>
                    {% endif %}
                </td>
          <td><a href="" onclick="edit({{ designation.id }});return false;"><span class="glyphicon glyphicon-edit text-info"></span></a>| 
          <a href="{% url "Designation:delete_designation" portfolio.get_encoded_id %}" onclick="return confirm('Are you sure to delete this data?');"><span class="glyphicon glyphicon-remove text-warning"></span></a></td>
        </tr>
      {% endfor %}
    </tbody>  
  </table>

<div class="modal fade" tabindex="-1" role="dialog" id="saveModal"></div>
  
{% endblock content %}


{% block additional_script %}
    <script type="text/javascript">

      function create(){
        showModal(null);
      }


      function edit(id){
        showModal(id);
      }

      function showModal(designation_id){
      var modal = $('#saveModal');
      var url = (designation_id==null)? "{% url "Designation:create_designation"%}" : "{% url "Designation:create_designation" 0 %}".replace('0', designation_id);

      $.ajax({
        url: url,
        success: function(response){
          modal.html(response);
          $('#saveModal').modal();
          console.log(designation_id);
          $('#saveFrm').submit(function(e){
                e.preventDefault();
              save($(this), url);
            });
        },
        error: function(){
          console.log("problem loading modal data");
        }
      });
      }

      function save(form, url){
        $.ajax({
          method: 'POST',
          url: url,
          data: form.serialize(),
          success: function(msg){
            console.log(msg);
            location.reload();
          },
          error: function(){
            console.log("problem creating data");
          }
        });
      }
    </script>
{% endblock additional_script %}
